@inherits LayoutComponentBase

<style>
	@@keyframes dialog_layout_show {
		0% {
			transform: translate3d(100%,0,0);
		}
		100% {
			transform: translate3d(0,0,0);
		}
	}
	@@keyframes dialog_layout_hide {
		0% {
			transform: translate3d(0,0,0);
		}
		100% {
			transform: translate3d(100%,0,0);
		}
	}

	.dialog_layout_main {
		animation: dialog_layout_show 0.3s;
	}
	.dialog-slide-out {
		transform: translate3d(100%,0,0);
		animation: dialog_layout_hide 0.3s;
	}
</style>
<div class="main dialog_layout_main">
	<div class="top-row px-4" style="z-index:1;justify-content:flex-start">

		<button onclick="history.back()">Back</button>

	</div>

	<div class="content px-4" style="padding-bottom:88px">
		<CascadingValue Value="this">
			@Body
		</CascadingValue>
	</div>
</div>


